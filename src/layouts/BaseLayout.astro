---
import '../styles/index.css'
import BaseHead from '../components/BaseHead.astro'
import Color from '../components/Color.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props {
    title: string;
    description: string;
    image?: string;
}

const { title, description, image = '/landing-og-image.png' } = Astro.props
---

<html lang="en">
<head>
    <BaseHead title={title} description={description} image={image} />
</head>

<body class="palette-2 px-[25px] md:px-0 min-h-[100vh]">
    <Header />
    <main class="max-w-[600px] mx-auto">
        <slot></slot>
    </main>

    <Footer />

    <Color />
</body>
</html>
